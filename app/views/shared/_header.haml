%header
  - link_to root_url, :id => 'title' do
    = image_tag 'transparent.png', :id => 'logo', :alt => "CommonPlace", :size => "262x37"
  
  #header_right
    
    %nav#tabs
      = tab_to current_user.community.name, community_url(current_user.community)
      = tab_to 'Inbox (1)', inbox_url
      = tab_to 'My Organizations', organizer_index_url
      = tab_to 'My Account', account_url
    
    %p#header_text
      - if current_user_session
        Hi, #{current_user.first_name}!
        = link_to 'Log out', logout_url
      - else
        Hi there!
        = link_to 'Log in', new_user_session_path
        |
        = link_to 'Register', new_account_path