%header
  - link_to root_path, :id => 'title' do
    = image_tag 'transparent.png', :id => 'logo', :alt => "CommonPlace", :size => "262x37"
  
  #header_right
    #header_text
      - if current_user_session
        Hi, #{current_user.first_name}!
        = link_to 'log out', logout_url
      - else
        Hi there!
        = link_to 'log in', new_user_session_path
        |
        = link_to 'register', new_account_path
    
    %nav#tabs
      %a#account_tab My Account
      %a#organizations_tab My Organizations
      %a#inbox_tab Inbox (1)
      %a#community_tab.selected_tab Roxbury
    
    = render 'shared/search'