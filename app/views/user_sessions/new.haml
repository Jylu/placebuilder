
#get_started
  - semantic_form_for @user_session || UserSession.new, :url => user_session_path, :html => { :class => "standard_form", :id => "sign_in" } do |f|
    %h2 Sign in
    = f.semantic_errors
    = f.inputs :email, :password
    %p.hint= link_to("forgot password?", new_password_reset_path)
    - f.buttons do 
      = f.commit_button "Log in"
  
  
  - semantic_form_for @user, :url => account_url, :html => { :class => "standard_form", :id => "sign_up"} do |f|
    %h2 Sign up
    
    - f.inputs do 
      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = f.input :password
      = f.input :password_confirmation
      = f.input :address
    - f.buttons do
      = f.commit_button :label => "Create an account"