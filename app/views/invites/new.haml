
= update_content "#say-something" do
  #say-something
    %h2= t ".title"
    = render 'shared/say_something_nav', :current => :invites
    - form_tag "/invites", 'data-remote' => true do
      %fieldset.inputs
        %ol
          %li.text
            = label_tag :message
            = text_area_tag :message
          %li.text
            = label_tag :emails
            = text_area_tag :emails, "", :rows => 6
      %fieldset.buttons
        %ol
          %li.commit
            = submit_tag "Invite"
