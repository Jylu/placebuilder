
%h1= t ".h1", :community => current_community.name, :learn_more => link_to(t(".learn_more"), learn_more_account_path)

= update_content "#main" do
  #main
    - semantic_form_for @user, :url => account_path, :html => {'data-remote' => true} do |f|
      - f.inputs do
        = f.input :full_name
        = f.input :email
        = f.input :address, :hint => t("formtastic.hints.user.address", :community => current_community.name)
      - f.buttons do 
        = f.commit_button :button_html => {:type => "image", :src => "/images/buttons/sign-up.png"}

%p#bubble-1= t ".bubble_1"
%p#bubble-2= t ".bubble_2"