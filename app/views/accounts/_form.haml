- form_for user, :url => account_path, :html => {:class => "new_entity"} do |f|
  .field.full_name.long
    = f.text_field :signup_name, 'data-label' => "Your Full Name"
    = f.error_message_on :signup_name
  .field.email.long
    = f.text_field :email, 'data-label' => "Your Email Address"
    = f.error_message_on :email
  .field.password.long
    = f.password_field :password, 'data-label' => 'Your Password'
    = f.error_message_on :password
    
  - f.fields_for user.location do |l|
    .field.street_address.long
      = l.text_field :street_address, 'data-label' => 'Your Street Address'
      = l.error_message_on :street_address
  
  .field.short.check_box
    %label
      = f.check_box :terms
      I agree to the #{ link_to 'Terms of Service', terms_path, 'data-remote' => true }.
    = f.error_message_on :terms


  .field.submit
    #submit_wrapper
      = f.submit "Sign up!".upcase