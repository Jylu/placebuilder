%div{'data-href' => post_path(post), :class => "post tooltip", 'data-tooltip' => 'Click to see replies to this post and more about the author.'}
  = image_tag post.owner.avatar_url(:thumb), :class => "avatar"
  %time= post.time
  .reply-count #{ post.replies.size } replies
  = link_to post.subject, post, 'data-remote' => true, :class => "title"
  .author= post.owner.name
  %p.body= auto_link post.body, :all, :target => "_blank" # truncate post.body, :length => 160
