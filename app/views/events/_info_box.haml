.info_box.event
  .header
    %img.icon{ :alt => "event" }
      %span.category EVENT
      %span.name= event.name
  .bottom
    = render("events/calendar", :event => event)
    .body
      %h3= event.name
      %table
        %tbody
          %tr#about
            %th.label Description
            %td= event.description
          %tr.time
            %th.label Starts at
            %td= event_date event.start_time
          %tr.time
            %th.label Ends at
            %td= event_date event.end_time
        
          - unless event.address.nil? || event.address.empty?
            %tr#address_row
              %th.label Address
              %td= event.address

      - if event.attendees.exists?(current_user)
        %p You are attending this event
        = button_to "Unattend", event_attendance_path(event), :method => :delete
      - else
        = button_to "Attend!", event_attendance_path(event) 