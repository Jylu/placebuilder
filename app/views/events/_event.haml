- item_tag(event) do
  - link_to event, :class => 'item_body', 'data-remote' => true do
    .author
      .small_calendar= render("events/calendar", :event => event)      
      = event.owner.name
    %h3
      = event.subject
    %time
      = event.time

    %p
      = event.body
      %span.reply_count #{ event.replies.size } replies
  .replies
    %ul
      - event.replies.each do |reply|
        = render reply

    = render 'replies/form', :reply => event.replies.new

