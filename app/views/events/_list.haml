- link_to_add(new_post_path) do
  = "&#x271a; Create a new event for your community" 

- unless @subscribed_events.empty?
  %h3 Your Events (Events from organizations you've subscribed to)
  %ul#wire
    - @subscribed_events.each do |event|
      = render 'shared/item', :item => event

- unless @suggested_events.empty?
  %h3 Suggested Events
  %ul#wire
    - @suggested_events.each do |event|
      = render 'shared/item', :item => event

- unless @community_events.empty?
  %h3 All Events
  %ul#wire
    - @community_events.each do |event|
      = render 'shared/item', :item => event


