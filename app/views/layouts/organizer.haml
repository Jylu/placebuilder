!!! 5
%html
  %head
    %meta{ :content => "text/html;charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "google-site-verification", :content => "HntCS6GTLIAye5nM6FCNHgtcSUlb0-aF2jVbGtd8oyI" }
    %link{ :href => image_path('favicon.png'), :rel => "icon", :type => "image/png" }

    / [if IE]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
      
    = javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.2.custom.min.js', 'sammy', 'autoresize.jquery.min.js', 'markermanager_packed.js', 'jquery.jellopudding.js', 'jquery.goodlabel.js', 'application'

    = stylesheet_link_tag 'application.css'

    %title Commonplace


  %body
    :javascript
      selectTab("organizations");

    #wrap

      %header
        %h1
          - link_to root_url, :id => 'title' do
            = image_tag 'transparent.png', :id => 'logo', :alt => "CommonPlace", :size => "262x37"

          - if current_user_session
            = tab_to "Community", '', :id => 'community_nav'

        %nav
          - if current_user_session
            Hi, #{current_user.first_name}!
            = tab_to(user_inbox_size, inbox_url, :id => 'inbox') + tab_to('My Account', account_url, :id => 'account') + tab_to(user_organization_text, organizer_index_url, :id => 'organizations') + tab_to('Log out', logout_url)
          - else
            - form_for UserSession.new, :url => user_session_path do |f|
              = f.text_field :email
              = f.password_field :password
              = f.submit "Log in"

      #main
        = render 'organizer/navigation'
        = yield

      #wrap_footer
    %footer
      %span.copy Commonplace &copy;
      %nav
        = link_to 'About', about_url
        |
        = link_to 'Terms', terms_url
        |
        = link_to 'Privacy Policy', privacy_url


    - if RAILS_ENV == "production"
      %script{:type=>"text/javascript"}
        var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
        document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      %script{:type=>"text/javascript"}
        try {
        var pageTracker = _gat._getTracker("UA-12888551-2");
        pageTracker._trackPageview();
        } catch(err) {}
