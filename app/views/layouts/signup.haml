- unless content_for? :tooltip
  - render 'shared/tooltip'

!!! 5
%html
  %head
    %meta{ :content => "text/html;charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "google-site-verification", :content => "HntCS6GTLIAye5nM6FCNHgtcSUlb0-aF2jVbGtd8oyI" }
    %link{ :href => image_path('favicon.png'), :rel => "icon", :type => "image/png" }
    %title= "CommonPlace - #{current_community.name}"
    
    / [if IE]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"    
    
    %script{ :type => 'text/javascript', :src => 'http://maps.google.com/maps/api/js?sensor=false' }
    
    = javascript_include_tag 'jquery-1.4.3', 'jquery-ui'
    = include_javascript_folder 'jquery'

    = javascript_include_tag 'sammy', 'innershiv', 'core', 'application', 'routes'
    = stylesheet_link_tag 'application'
  
  %body.application.signup
    #body_color
      #wrap.signup
        #top_content
          #signup-container
            #login
              - form_for UserSession.new, :url => user_session_path do |f|
                .field.email
                  %label= 'Email'.upcase
                  = f.text_field :email, :size => 20
                .field.password
                  %label= 'Password'.upcase
                  = f.password_field :password, :size => 20
                .buttons.submit
                  #submit_wrapper
                    = f.submit "Log in".upcase
              %p.forgot_password= link_to "Forgot your password?", new_password_reset_path, 'data-remote' => true
    
            #register
              %h3
                Sign up to get short updates about what's happening in your neighborhood.
              = render 'accounts/form', :user => current_user
      
          %header
            - link_to root_url do
              = image_tag "#{current_community.slug}_signup.png", :alt => "Commonplace #{current_community.name}"

    
          #slideshow
            %ol
              %li.slide
                = image_tag(current_community.slug + '/slideshow/1.jpg', :size => "450x300")
                .overlay
                  %h4 Welcome to West Roxbury CommonPlace
                  %p CommonPlace helps you share and connect with the people in your neighborhood.
                  .navigation
                    %a.prev{:href=>"#"} &laquo; PREV
                    %a.prev{:href=>"#"} NEXT &raquo;
              %li.slide
                = image_tag(current_community.slug + '/slideshow/2.jpg', :size => "450x300")
                .overlay
                  %h4 Stay in the loop
                  %p Sign up for CommonPlace to receive weekly email bulletins about what's happening in West Roxbury.
                  .navigation
                    %a.prev{:href=>"#"} &laquo; PREV
                    %a.prev{:href=>"#"} NEXT &raquo;

              %li.slide
                = image_tag(current_community.slug + '/slideshow/3.jpg', :size => "450x300")
                .overlay
                  %h4 Be a great neighbor
                  %p Use CommonPlace to share needs, offers and announcements with your neighbors.
                  .navigation
                    %a.prev{:href=>"#"} &laquo; PREV
                    %a.prev{:href=>"#"} NEXT &raquo;
        
        #site_preview
          %a#left_arrow{:href=>"#"}
          %a#right_arrow{:href=>"#"}
          .slides
            - @items.take(6).each_slice(3) do |slide|
              %ol
                - slide.each do |item|
                  %li         
                    #date= DateTime.now.strftime('%B %d, %Y')
                    .title= item.subject
                    %p= truncate item.body, :length => 100
                    %p.bottom= "#{ item.time } from #{ item.owner.name }"
            .please-signup
              #{ image_tag 'sign-up-now.png' }
              %p
                To continue reading events, announcements, and what's happening in your neighborhood...

            
                  
      - if content_for? :modal
        = yield :modal
      - else
        #modal
    
    = render 'shared/footer'  
    - if RAILS_ENV == "production"
      %script
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-12888551-3']);
        _gaq.push(['_trackPageview', location.pathname + location.hash]);
      
        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
