- unless updated_content["#tooltip"]
  - render 'shared/tooltip'

!!! 5
%html
  %head
    %meta{ :content => "text/html;charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "google-site-verification", :content => "HntCS6GTLIAye5nM6FCNHgtcSUlb0-aF2jVbGtd8oyI" }
    %link{ :href => image_path('favicon.png'), :rel => "icon", :type => "image/png" }
    %title= "CommonPlace - #{current_community.name}"

    / [if IE]
      = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
    %script{ :type => 'text/javascript', :src => 'http://maps.google.com/maps/api/js?sensor=false' }

    = javascript_include_tag 'jquery-1.4.3', 'jquery-ui'
    = include_javascript_folder 'jquery'

    = javascript_include_tag 'sammy', 'innershiv', 'core', 'application', 'routes'

    = stylesheet_link_tag 'application'

  %body{:class => "application #{params[:controller]} #{params[:action]}"}
    - if current_user_session
      = render 'shared/admin_bar'
    %header
      - link_to root_url, :id => "logo" do
        = image_tag "logo-pin.png"
        CommonPlace 
        %span.community= current_community.name
      - if current_user_session
        %nav
          = tab_to "Home", "/"
          %span{ :class => "disabled_link" } Create a Feed
          = tab_to "Settings", edit_account_path
          = tab_to "Log Out", "/user_session", :method => :delete
      - else
        #login
          - form_for UserSession.new, :url => user_session_path do |f|
            .field.email
              %label= 'Email'.upcase
              = f.text_field :email, :size => 20
            .field.password
              %label= 'Password'.upcase
              = f.password_field :password, :size => 20
            .buttons.submit
              #submit_wrapper
                = f.submit "Log in".upcase
            %p.forgot_password= link_to "Forgot your password?", new_password_reset_path, 'data-remote' => true
    
    #main
      = yield
    %footer
      .left_text
        Find out more at #{ link_to "CommonPlaceUSA.com", "http://commonplaceusa.com", :target => :blank }
      .right_text
        = mail_to "pete@commonplaceusa.com", "Questions?  Email Pete@CommonPlaceUSA.com"
        &sdot;
        = link_to "About", "http://commonplaceusa.com", :target => :blank
        &sdot;
        = link_to "Terms", terms_path, 'data-remote' => true
        &sdot;
        = link_to "Privacy Policy", privacy_path, 'data-remote' => true

    - if updated_content["#modal"]
      = updated_content["#modal"]
    - else
      #modal


  - if RAILS_ENV == "production"
    %script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-12888551-3']);
      _gaq.push(['_trackPageview', location.pathname + location.hash]);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
