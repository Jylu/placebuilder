.info_box.user
  #info_box_top= "Your Neighbor".upcase

  #info_box_main
    #info_box_main_left
      = image_tag user.avatar.url, :width => 120, :height => 120, :class => 'graphic'
      - unless current_user.mets.exists?(user)
        = button_to "Have you met?", "", :id => "follow_link", :class => "link_button"
      = link_to "Message #{ user.first_name }", new_user_message_path(user), :id => "message_me", :class => "link_button", 'data-remote' => true
    .body
      %h3= user.full_name
      %p.user_about= auto_link user.about, :all, :target => '_blank'
      %ol.user_info
        - unless user.interests.empty?
          %li
            %span.info_title= "Shared skills".upcase
            = user.skill_list.join(", ")
        - unless user.interests.empty?
          %li
            %span.info_title= "Interests".upcase
            = user.interest_list.join(", ")
        - unless user.organizations.empty?
          %li
            %span.info_title= "Organizations".upcase
            = user.organizations.map{ |org| link_to org.name, org, :target => '_blank' }.join(", ")
        %li
          %span.info_title= "Address".upcase 
          = user.address[/(.+?)(,)/, 1]

  = render_map do |map|
    - map.center :lat => user.lat, :lng => user.lng
    - map.marker :lat => current_user.lat, :lng => current_user.lng
    - map.marker :lat => user.lat, :lng => user.lng
    - map.directions do |dir|
      - dir.origin :lat => current_user.lat, :lng => current_user.lng
      - dir.destination :lat => user.lat, :lng => user.lng
      
      
  
