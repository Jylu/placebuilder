#syndicate
  %nav
    %a#create-entity
      %span
        %img
        INVITE PEOPLE TO COMMONPLACE

    #filters
      %a.selected
        %span NEIGHBORHOOD
      %a
        %span ALL

  %ul.items
    - @users.each do |user|
      %li.item
        - link_to user, :class => 'user', 'data-remote' => true do
          = image_tag user.avatar_url(:thumb), :class => "avatar"
          .title= user.name
          %p.body= user.about
            


