- content_for :navigation do
  = render 'navigation'

#edit_profile
  
  - form_for @organization.avatar, :html => {:multipart => true, :class => "management_form", :id => "edit_avatar"} do |f|
    %h3.management_field Edit your profile picture
    = image_tag @organization.avatar_url(:normal), :class => "graphic normal #{dom_id @organization.avatar}"
    = f.label :image, "Upload a new profile picture:"
    - if @organization.avatar.image.file?
      = link_to 'Crop your photo', edit_avatar_path(@organization.avatar), 'data-remote' => true 
    = f.file_field :image

  - semantic_form_for @organization, :url => management_organization_path(@organization), :html => { :class => "management_form" } do |f|
    %h3.management_field Edit #{ @organization.name }'s profile
    - f.inputs do
      = f.input :name
      = f.input :about, :input_html => {:rows => 4, :cols => 40}
      = f.input :website
      = f.input :phone
      = f.input :tag_list, :as => :string, :label => "Tag list", :hint => "For example: outdoors, skiing"
    = f.inputs :street_address, :zip_code, :for => @organization.location
    = f.buttons

#profile
  = render 'preview'
