- content_for :navigation do
  = render 'navigation'

#edit_profile
  
  - form_for @organization, :url => management_organization_path(@organization), :html => { :multipart => true, :class => "management_form", :id => "edit_avatar" } do |f|
    %h3.management_field Edit #{ @organization.name }'s profile picture
    = image_tag @organization.avatar.url, :width => 120, :height => 120, :class => 'graphic'
    %fieldset
      = f.label :avatar, "Upload a new profile picture:"
      = f.file_field :avatar
      = f.submit "Save your profile photo"

  - semantic_form_for @organization, :url => management_organization_path(@organization), :html => { :class => "management_form" } do |f|
    %h3.management_field Edit #{ @organization.name }'s profile
    - f.inputs do
      = f.input :name
      = f.input :about, :input_html => {:rows => 4, :cols => 40}
      = f.input :phone
      = f.input :website
      = f.input :address
      = f.input :tag_list, :as => :string, :label => "Tag list", :hint => "For example: outdoors, skiing"
    = f.buttons

#edit_profile
  %h3.management_field Manage profile fields
  
  = button_to "Add a new profile field", "#" + new_management_organization_profile_field_path(@organization), :method => :get, :id => "new_profile_field", :class => "styled_button"

  %ul#modules
    - @organization.profile_fields.sort{ |x,y| x.position <=> y.position }.each do |p|
      %li.profile_field{:id => "field_#{p.id}"}
        %h3
          = p.subject
          %span.admin
            = link_to 'edit'
            &sdot;
            = link_to 'delete'
        %p= p.body
  = button_to 'Save', order_management_organization_profile_fields_path(@organization), :id => "save_profile_fields", :class => "styled_button"
= link_to "Preview #{@organization.name}'s profile &raquo;", @organization, :class => "profile_preview", :target => :blank          
  

