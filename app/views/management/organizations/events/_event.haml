- item_tag(event) do
  - link_to management_event_path(event), :class => 'item_body' do
    .author
      .small_calendar= render("events/calendar", :event => event)      
      = event.owner.name
    %h3
      = event.subject
    %time
      = event.time

    %p
      = truncate event.body, :length => 160
      %span.reply_count #{ event.replies.size } replies

