- content_for :navigation do
  = render 'management/organizations/navigation'
 
#edit_profile
  %h3.management_field Manage profile fields
  %p.form-hint These Profile Fields will be shown on the your organization profile page. You can change their order, add new ones, and edit them.
  = render 'profile_fields/index_form'

  = button_to "New Profile Field", new_organization_profile_field_path(@organization), :method => :get

  = button_to "Save order", order_organization_profile_fields_path(@organization), :method => :put

= link_to "Preview #{@organization.name}'s profile &raquo;", profile_path(@organization.slug.name), :class => "profile_preview", :target => :blank          
  

