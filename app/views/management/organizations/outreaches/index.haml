

- content_for :navigation do
  = render 'management/organizations/navigation'

#invite_on_commonplace
  %h3.management_field Invite People on CommonPlace to Join
  .tabs
    %ul
      %li
        %a{:href => "#suggested-people"}
          Suggested People
      %li
        %a{:href => "#all-people"}
          All People
      %li
        %a{:href => "#current-people"}
          Current Subscribers

    - if @possible_subscribers.size > 0
      %ul#suggested-people
        - @possible_subscribers.each do |user|
          %li{:class => cycle("odd","even")}
            = link_to user.name, user, 'data-remote' => true
            = link_to "Invite", new_management_invite_path(:invite => {:invitee_id => user.id, :inviter_id => @organization.id, :inviter_type => @organization.class.human_name}), :class => "invite-button", 'data-remote' => true

    - else
      %p#suggested-people
        We weren't able to find any users with interests similar
        to your organization. If you haven't already, try adding tags
        to your organization.
        
    - if @organization.subscribers.size > 0
      %ul#current-people
        - @organization.subscribers.each do |user|
          %li= link_to user.name, user
          
    - else
      %p#current-people
        You don't have any subscribers yet. Try inviting some.

    %ul#all-people
      - @organization.community.users.each do |user|
        %li{:class => cycle("odd","even")}
          = link_to user.name, user, 'data-remote' => true
          = link_to "Invite", new_management_invite_path(:invite => {:invitee_id => user.id, :inviter_id => @organization.id, :inviter_type => @organization.class.human_name}), :class => "invite-button", 'data-remote' => true

#invite_by_email
  %h3.management_field Invite People by Email
  = render 'management/email_invites/form', :invite => Invite.new, :inviter => @organization

  