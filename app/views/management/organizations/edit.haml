- content_for :navigation do
  = render 'navigation'

- semantic_form_for [:management, @organization] do |f|
  - f.inputs do
    = f.input :name
  = f.inputs :street_address, :zip_code, :for => :location
  - f.inputs do
    = f.input :avatar
    = f.input :about
    = f.input :phone
    = f.input :website
    = f.input :category, :as => :select, :collection => Organization::CATEGORIES
  
  - f.buttons do
    = f.commit_button 'Update'
  