- item_tag(announcement) do
  - link_to url_for(announcement), :class => 'item_body', 'data-remote' => true do
    .author
      = image_tag announcement.owner.avatar.url, :width => 50, :height => 50
      = announcement.owner.name
    %h3
      = announcement.subject    
    %time
      = announcement.time
    %p
      = announcement.body
      #{ announcement.replies.size } replies
  .replies
    %ul
      - announcement.replies.each do |reply|
        = render reply

    = render 'replies/form', :reply => announcement.replies.new
