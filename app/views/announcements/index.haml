
#syndicate
  %nav
    %a#create-entity
      %span
        %img
        POST AN ANNOUNCEMENT
    #filters
      %a.selected
        %span ALL
      %a
        %span SUBSCRIBED
  %ul.items
    - @announcements.each do |announcement|
      %li.item
        - link_to announcement, :class => 'announcement', 'data-remote' => true do
          = image_tag announcement.owner.avatar_url(:thumb), :class => 'avatar'
          %time= announcement.time
          .reply-count #{ announcement.replies.size } replies
          .title= announcement.subject
          .author= announcement.owner.name
          %p.body= truncate announcement.body, :length => 160
        
        = render 'shared/replies', :item => announcement

#tooltip
  Hi Brian! Welcome to West Roxbury's first community website.
  
= render 'shared/information', :items => @announcements.map(&:owner)