.info_box.organization
  .header
    %img.icon{ :alt => "organization" }
    %span.category ORGANIZATION
    %span.name= organization.name
  .bottom
    = image_tag organization.avatar.url, :width => 120, :height => 150, :class => 'graphic'
    .body
      %h3= organization.name
      %table
        %tbody
          %tr#about
            %th.label About Us
            %td= organization.about
            
          - organization.profile_fields.each do |field|
            %tr.profile_field
              %th.label= field.subject
              %td= field.body
          
          - if organization.phone
            %tr#phone
              %th.label Phone
              %td= organization.phone
        
          - unless organization.address.nil? || organization.address.empty?
            %tr#address_row
              %th.label Address
              %td= organization.address[/(.+?)(,)/, 1]

      .expand Contact Us