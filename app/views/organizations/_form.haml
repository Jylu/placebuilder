- semantic_form_for @organization, :html => { :class => 'new_entity' } do |f|
  %hr.staple
    
  %h1 Create a local organization

  - f.inputs do
    = f.input :name
    = f.input :address
    = f.input :phone
    = f.input :website
    = f.input :category, :as => :radio, :collection => Organization::CATEGORIES
    - f.semantic_fields_for :profile_fields do |pf|
      = pf.input :subject
      = pf.input :body
  - f.buttons do
    #submit_wrapper= f.commit_button "Create Organization"
