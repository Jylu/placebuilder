- semantic_form_for @organization, :html => { :class => 'new_entity', :multipart => true } do |f|

  - f.inputs do
    = f.input :name
    = f.input :about, :hint => "This is the official summary of your organization on CommonPlace.", :input_html => {:rows => 2}
    = f.input :category, :as => :radio, :collection => Organization::CATEGORIES
    = f.input :phone
    = f.input :website
  - f.inputs :for => @organization.location do |l|
    = l.input :street_address
    = l.input :zip_code
  - f.inputs do
    = f.input :tag_list, :hint => "Examples: cooking, families, tacos, plumbing, etc."
  - f.buttons do
    #submit_wrapper= f.commit_button "Continue"
