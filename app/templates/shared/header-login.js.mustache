<div class="community-name">
   <h1>CommonPlace
   </h1>
     <span class="community">
       {{community_name}}
     </span>

 </div>
 <div class="top-bar">
   <div class="registration_right">
     <h3>Wrong Town?</h3> 
     <div class="button blue">
       Choose
     </div>
     <h3>Have an account?</h3> 
     <div id="login" class="button red drop">
       Login
     </div>
     <div class="dropdown">
       <div class="arrow"></div>
       <input type="email" name="email" class="email" placeholder="Email Address" />
       <input type="password" name="password" placeholder="Password" />
       <button name="signin" class="button signin">Sign In</button>
       <button name="facebooksignin" class="button signin facebook">Facebook Login</button>
       <p class="forgot">Forgot Password?</p>
     </div>
   </div>
 </div>
