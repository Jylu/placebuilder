<form>
  <div class="error"></div>
  <h1>Write a private message</h1>
  <label for="recipient">Recipient:</label>

  <span id="recipient-selector">
    <input type="text" id="recipient" name="recipient" />
  </span>

  <span id="recipient-viewer" style="display: none">
    <span id="recipient-name"></span>
    <img src="/assets/shared/icons/cancel.png" id="cancel-recipient" />
  </span>

  <label for="subject">Subject:</label>
  <input name="subject" type="text">

  <label for="body">Body:</label>
  <textarea name="body" rows="6"></textarea>

  <div class="controls">
    <a class="cancel" href="#">Cancel</a>
    <button>Send Message</button>
  </div>
</form>
