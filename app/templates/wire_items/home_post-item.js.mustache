<div class="wire-top" data-published-at="{{publishedAtISO}}">
  <h3 class="{{wireCategory}}">{{wireCategoryName}}</h3>
  <p>{{publishedAt}}</p>
</div>
<div class="post-content">
  <div class="avatar-container" style="background-image:url('{{avatarUrl}}');">
  </div>
  <h3>{{title}}</h3>
  <p class="author">{{author}}{{#group}}to <a href="{{groupUrl}}">{{group}}</a>{{/group}}</p>
  <p class="post-text">{{#markdown}}{{body}}{{/markdown}}</p>
</div>
<div class="post-action clear">
  <ul class="actions">
    <li class="reply-link">Reply</li>
    <li class="share-link">Help Publicize</li>
    <li class="thank-link">Thank {{first_name}}</li>
    <li class="flag-link">Flag</li>
  </ul>
</div>
<div class="post-interaction">
  <div class="interaction">
    {{#numThank}}
    <p class="thanked">
      <span class="blue">{{numThank}} {{peoplePerson}}</span> thanked this post: 
      {{#thanks}}
      <span class="blue">{{thanker}} </span>
      {{/thanks}}
    </p>
    {{/numThank}}
    {{#num_shares}}
    <!--
    <p class="publicized">
      <span class="blue">{{num_shares}} {{share_people}}</span> shared this post: 
      {{#shares}}
      <span class="blue">{{sharer}}</span>
      {{/shares}}
    </p>
    -->
    {{/num_shares}}
  </div>
</div>

<div class="replies-area"></div>

<div class="post-shadow">
  <span class="shadow_left"></span>
  <span class="shadow_right"></span>
</div>

<div class="clear">
</div>
