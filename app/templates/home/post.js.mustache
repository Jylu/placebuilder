<div class="wire-top" data-time-ago="{{timeAgo}}">
  <h3 class="{{wireCategory}}">{{wireCategoryName}}</h3>
  <p>{{timeAgo}}</p>
</div>
<div class="post-content">
  <img src="{{avatar_url}}" />
  <h3>{{title}}</h3>
  <p class="author">{{author}}</p>
  <p class="post-text">{{body}}</p>
</div>
<div class="post-action clear">
  <ul class="actions">
    <li class="reply metric_wire_engagement_reply">Reply</li>
    <li class="help metric_wire_engagement_share">Help Publicize</li>
    <li class="thank metric_wire_engagement_thank">Thank</li>
    <li class="flag metric_wire_engagement_flag">Flag</li>
  </ul>
</div>
<div class="post-interaction">
  <div class="interaction">
    <p class="thanked">
      <span class="blue">{{num_thanks}} {{thank_people}}</span> thanked this post: 
      {{#thanks}}
      <span class="blue">{{thanker}} </span>
      {{/thanks}}
    </p>
    <p class="publicized">
      <span class="blue">2 people</span> shared this post: 
      <span class="blue">Mark Malazarte </span>
      and 
      <span class="blue">Jackie Chilles</span>
    </p>
  </div>
</div>

<div class="post-replies">
  <p class="replies">
    <span class="blue">{{num_replies}} {{reply_people}}</span> replied to this post: 
  </p>
  <ul id="post-replies">{{#replies}}
    <li><img src="{{avatar_url}}">  
      <p class="author">{{author}}</p>
      <p class="reply-text">{{body}}</p>
      <p class="reply-actions">
        <span class="reply-time">{{time_ago}} &bull;</span>
        <span class="reply-thank">Thank</span>
        <span class="many-thanks">&bull; {{num_thanks}} {{thank_people}} thanked</span>
      </p>  
  </li>
  {{/replies}}</ul>
  
</div>

<div class="clear">
</div>
