<div class="wire-top" data-published-at="{{timeAgoISO}}">
  <h3 class="{{wireCategory}}">{{wireCategoryName}}</h3>
  <p>{{timeAgoWords}}</p>
</div>
<div class="post-content">
  <img src="{{avatar_url}}" />
  <h3>{{title}}</h3>
  <p class="author">{{author}}</p>
  <p class="post-text">{{body}}</p>
</div>
<div class="post-action clear">
  <ul class="actions">
    <li class="reply">Reply</li>
    <li class="help">Help Publicize</li>
    <li class="thank">Thank</li>
    <li class="flag">Flag</li>
  </ul>
</div>
<div class="post-interaction">
  <div class="interaction">
    {{#num_thanks}}
    <p class="thanked">
      <span class="blue">{{num_thanks}} {{thank_people}}</span> thanked this post: 
      {{#thanks}}
      <span class="blue">{{thanker}} </span>
      {{/thanks}}
    </p>
    {{/num_thanks}}
    {{#num_shares}}
    <!--
    <p class="publicized">
      <span class="blue">{{num_shares}} {{share_people}}</span> shared this post: 
      {{#shares}}
      <span class="blue">{{sharer}}</span>
      {{/shares}}
    </p>
    -->
    {{/num_shares}}
  </div>
</div>

<div class="post-replies">
  <ul id="post-replies">{{#replies}}
    <li><img src="{{avatar_url}}">  
      <p class="author">{{author}}</p>
      <p class="reply-text">{{body}}</p>
      <p class="reply-actions">
        <span class="reply-time">{{time_ago}} &bull;</span>
        <span class="reply-thank">Thank</span>
        <span class="many-thanks">&bull; {{num_thanks}} {{thank_people}} thanked</span>
      </p>  
  </li>
  {{/replies}}</ul>
  <input class="post-reply" placeholder="Reply to this post">
  <button class="post-reply-button">Reply</button>
  
</div>

<div class="post-shadow">
  <span class="shadow_left"></span>
  <span class="shadow_right"></span>
</div>

<div class="clear">
</div>
