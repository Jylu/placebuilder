        <button class="red-button">POST NOW</button>

      </form>

    </div>

	<div class="form-container offer">
      <form>
        <input placeholder="Offer Title" name="offer-title" class="rounded_corners">
        <textarea placeholder="Offer Message" name="offer-post" class="rounded_corners"></textarea>		

        <button class="red-button">POST NOW</button>

