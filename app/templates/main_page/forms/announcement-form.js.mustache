<div id="post-box" class="form modal">
	<div class="error"></div>

  <div class="form-container announcement modal-border">
    {{^hasFeeds}}
    <div class="posting-header announcement">
      <h1>Promote your service or organization</h1>
      <span>You must first register a service or organization before you can promote it</span>
    </div>
    <a href="/feed_registrations/new" class="red-button">Register a New Feed</a>
    {{/hasFeeds}}
    {{#hasFeeds}}
    <div class="posting-header announcement">
      <h1>Promote your service or organization</h1>
      <span>Share with your neighbors</span>
    </div>
    <div class="seam">
    </div>
    <div class="post_category">
      <form>
        <select name="feed_selector" class="chzn-select" tabindex="1">
          <option value="">What organization do you want to promote?&nbsp;&nbsp;&nbsp;&nbsp;</option>
          {{#feeds}}
          <option value="{{id}}">{{name}}</option>
          {{/feeds}}
        </select>

        <input type="text" placeholder="Post Title" name="title" class="rounded_corners">
        <textarea placeholder="Write your post here!" name="body" rows="15" cols="55" class="rounded_corners"></textarea>

        <div class="spinner"></div>
        <button class="red-button submit">POST NOW</button>
      </form>
    </div>
    {{/hasFeeds}}
  </div>
  <div class="close">
    x
  </div>
  <button class="back red-button">Back</button>
</div>
