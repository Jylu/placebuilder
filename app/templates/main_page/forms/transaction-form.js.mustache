<div id="post-box" class="form">
  <div class="error"></div>

  <div class="form-container">
    <div class="posting-header requests">
      <h1>Selling Something</h1>
      <span>Sell something to your neighbors</span>
    </div>
    <div class="seam">
    </div>
    <form>
      <input type="text" placeholder="Title" name="title" class="rounded_corners" >
      <input type="text" placeholder="Price" name="price" class="rounded_corners price" >
      <textarea placeholder="Sell something or give it away!" name="body" rows="15" cols="55" class="rounded_corners"></textarea>

      <img class="item_pic" src="/avatars/missing.png" alt="This is a picture of the item for sale" style="width: 50px; height: 50px;"/>
      <button class="image_file_browser">Upload Image</button>

      <div class="spinner"></div>
      <div id="business">
        Are you advertising on behalf of a business or organizations?<br />		
        <ul>
          <li><input type="radio" name="business" value="yes">Yes</li>
          <li><input type="radio" name="business" value="no">No</li>
        </ul>
      </div>

      <button class="red-button">POST NOW</button>
    </form>
  </div>
  <div class="close">
    x
  </div>
</div>
