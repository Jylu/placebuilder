<div id="post-box" class="form">
  <div class="error"></div>

  <div class="form-container">
    <div class="posting-header requests">
      <h1>Requests</h1>
      <span>Ask your neighbors a question</span>
    </div>
    <div class="seam">
    </div>
    <form>
      <input type="text" placeholder="Request Title" name="title" class="rounded_corners">
      <textarea placeholder="Request Message" name="body" class="rounded_corners"></textarea>
      <select data-placeholder="Tag Your Post" class="dropdown" tabindex="1">
          <option value=""></option>
          <option value="Virgin Islands, British">Virgin Islands, British</option> 
          <option value="Virgin Islands, U.S.">Virgin Islands, U.S.</option> 
          <option value="Wallis and Futuna">Wallis and Futuna</option> 
          <option value="Western Sahara">Western Sahara</option> 
          <option value="Yemen">Yemen</option> 
          <option value="Zambia">Zambia</option> 
          <option value="Zimbabwe">Zimbabwe</option>
      </select>

      <div class="spinner"></div>

      <button class="red-button">POST NOW</button>
    </form>
  </div>
  <div class="close">
    x
  </div>
</div>
