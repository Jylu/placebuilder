<div id="post-box" class="form">
  <div class="error"></div>
  <div class="form-container event modal-border">
    <div class="posting-header requests">
      <h1>Publicize an Event or Meetup</h1>
      <span>Add to our events board or suggest a get-together with your neighbors.</span>
    </div>
    <div class="seam">
    </div>
    <form>
      <input type="text" placeholder="Event Name" name="title" class="rounded_corners">
      <textarea placeholder="Description of your event" name="about" class="rounded_corners"></textarea>
      <div id="event_date">
        <input class="date rounded_corners" id="date" placeholder="Date" name="date" value="{{date}}" type="text">
      </div>
      <div id="start_at_time">
        <select name="start" id="start_time" class="chzn-select" tabindex="1">
          <option value="">Starts At</option>
          {{#time_values}}
            <option value="{{.}}">{{.}}</option>
          {{/time_values}}
        </select>
      </div>
      <div id="end_at_time">
        <select name="end" id="end_time" class="chzn-select" tabindex="1">
          <option value="">Ends At</option
          {{#time_values}}
            <option value="{{.}}">{{.}}</option>
          {{/time_values}}
        </select>
      </div>

      <input type="text" placeholder="Venue Name" name="venue" class="rounded_corners">
      <input type="text" placeholder="Address" name="address" class="rounded_corners">
      <button class="red-button submit">POST NOW</button>
    </form>
  </div>
  <div class="close">
    x
  </div>
</div>
